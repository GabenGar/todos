{
  "compilerOptions": {
    "baseUrl": "./src",
    "paths": {
      "#environment": [
        "./environment/index.ts"
      ],
      "#environment/*": [
        "./environment/*/index.ts"
      ],
      "#pages/types": [
        "./app/types.ts"
      ],
      "#lib/*": [
        "./lib/*/index.ts"
      ],
      "#server": [
        "./server/index.ts"
      ],
      "#server/*": [
        "./server/*/index.ts"
      ],
      "#browser/*": [
        "./browser/*"
      ],
      "#hooks": [
        "./hooks/index.ts"
      ],
      "#components": [
        "./components/index.ts"
      ],
      "#components/types": [
        "./components/types.ts"
      ],
      "#components/*": [
        "./components/*/index.ts"
      ],
      "#entities/*": [
        "./entities/*/index.ts"
      ],
      "#types": [
        "./types.ts"
      ],
      "#schema/*": [
        "../../schema/*"
      ]
    },
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "incremental": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "plugins": [
      {
        "name": "next"
      }
    ]
  },
  "include": [
    "next-env.d.ts",
    ".next/types/**/*.ts",
    "**/*.ts",
    "**/*.tsx"
  ],
  "exclude": [
    "node_modules"
  ]
}
