{
  "$schema": "https://biomejs.dev/schemas/1.3.1/schema.json",
  "files": {
    "ignore": ["apps/frontend", "apps/extension", "apps/oikia", "node_modules"]
  },
  "json": {
    "formatter": {
      "enabled": true,
      "indentStyle": "space"
    }
  },
  "linter": {
    "enabled": true,

    "rules": {
      "recommended": true,
      "style": {
        "useShorthandFunctionType": "off"
      },
      "suspicious": {
        "noEmptyInterface": "off"
      },
      "complexity": {
        "noForEach": "off"
      }
    }
  },
  "formatter": {
    "enabled": true,
    "indentStyle": "space"
  }
}
