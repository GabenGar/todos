{
  "compilerOptions": {
    "checkJs": true,
    "skipLibCheck": true,
    "strict": true,
    "sourceMap":  true,
    "incremental": true,
    "esModuleInterop": true,
    "target": "ES2015",
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "lib": ["esnext", "WebWorker"],
    "allowJs": true,
    "plugins": [
      {
        "name": "next"
      }
    ]
  },
  "include": ["src/browser/workers/service-worker.ts"]
}
