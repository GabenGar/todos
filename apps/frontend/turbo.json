{
  "$schema": "https://turbo.build/schema.json",
  "extends": ["//"],
  "tasks": {
    "build": {
      "dependsOn": ["build-pages", "build-workers"]
    },
    "build-pages": {
      "env": ["NODE_ENV", "VERCEL", "VERCEL_ENV", "VERCEL_URL"],
      "inputs": [
        "$TURBO_DEFAULT$",
        "src/**",
        "scripts/**",
        "public/**",
        "!public/service-worker.js",
        "!public/service-worker.js.map",
        "codegen/**"
      ],
      "outputs": ["out/**", ".next/**", "!.next/cache"]
    },
    "build-workers": {
      "env": ["NODE_ENV", "VERCEL", "VERCEL_ENV", "VERCEL_URL"],
      "dependsOn": ["build-pages"],
      "inputs": ["$TURBO_DEFAULT$", "src/**", "scripts/**", "codegen/**"],
      "outputs": ["public/service-worker.js", "public/service-worker.js.map"]
    },
    "dev": {
      "with": ["dev-workers"]
    },
    "dev-workers": {
      "persistent": true
    }
  }
}
