{
  "compilerOptions": {
    "checkJs": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "incremental": true,
    "esModuleInterop": true,
    "target": "ES2015",
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    // adding webworker there to have IDE support for service worker file
    // otherwise nextjs overwrites the config file
    // when used with project references
    // https://github.com/vercel/next.js/discussions/39942
    "lib": ["dom", "dom.iterable", "esnext", "WebWorker"],
    "allowJs": true,
    "jsx": "preserve",
    "plugins": [
      {
        "name": "next"
      }
    ]
  },
  "include": ["**/*.ts", "**/*.tsx", ".next/types/**/*.ts", "next-env.d.ts"],
  "exclude": [
    "node_modules",
    "scripts",
    "codegen/generators",
  ]
}
