{
  "compilerOptions": {
    "outDir": "./dist/",
    "rootDir": ".",
    "sourceMap": true,
    "module": "es6",
    "target": "ES2021",
    "moduleResolution": "bundler",
    "jsx": "react-jsx",
    "noImplicitAny": true,
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "resolveJsonModule": true
  },
  "exclude": ["./dev", "./build", "./dist", "./temp"]
}
