{
  "name": "link-overwatch",
  "version": "0.0.1",
  "author": "Gabengar",
  "license": "MPL-2.0",
  "description": "An extension to watch out for the URLs.",
  "private": true,
  "homepage": "https://github.com/GabenGar/todos#readme",
  "main": "./src/manifest.json",
  "keywords": [
    "webextensions",
    "firefox",
    "chrome"
  ],
  "scripts": {
    "start": "web-ext run --no-config-discovery --config=web-ext-config.mjs",
    "build": "webpack --config webpack.prod.js && web-ext build --no-config-discovery --config=web-ext-config.mjs",
    "dev": "node scripts/dev.mjs",
    "lint": "web-ext lint --output=json --pretty",
    "open-analyzer": "opener http://127.0.0.1:8888/"
  },
  "imports": {
    "#popup/*": "./src/popup/*/index.ts",
    "#options/*": "./src/options/*/index.ts"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/GabenGar/todos.git"
  },
  "bugs": {
    "url": "https://github.com/GabenGar/todos/issues"
  },
  "dependencies": {
    "@repo/ui": "*",
    "browser-info": "^1.3.0",
    "clsx": "^2.1.1",
    "loglevel": "^1.9.2",
    "query-string": "^9.1.1",
    "react": "18.3.1",
    "react-copy-to-clipboard": "^5.0.1",
    "react-dom": "18.3.1",
    "react-router": "^7.0.1",
    "react-router-dom": "^7.0.1",
    "react-toggle": "^4.1.3"
  },
  "devDependencies": {
    "@babel/core": "^7.26.0",
    "@babel/plugin-proposal-nullish-coalescing-operator": "^7.18.6",
