    "typescript": "^5.7.2",
    "web-ext": "^8.3.0",
    "webextension-polyfill": "^0.12.0",
    "webpack": "^5.96.1",
    "webpack-bundle-analyzer": "^4.10.2",
    "webpack-cli": "^5.1.4",
    "webpack-sources": "^3.2.3",
    "zip-webpack-plugin": "^4.0.2"
  }
