{
  "$id": "firefox-manifest",
  "title": "WebExtensionManifestFirefox",
  "type": "object",
  "additionalProperties": false,
  "properties": {
    "manifest_version": {
      "const": 3
    },
    "version": {
      "type": "string"
    },
    "name": {
      "type": "string"
    },
    "short_name": {
      "description": "Short name for the extension. If given, this will be used in contexts where the `name` field is too long. It's recommended that the short name should not exceed 12 characters. If the short name field is not included in manifest.json, then name will be used instead and may be truncated."
    },
    "description": {
      "type": "string"
    },
    "default_locale": {
      "const": "en"
    },
    "browser_specific_settings": {
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "gecko": {
          "type": "object",
          "additionalProperties": false,
          "properties": {
            "id": {
              "type": "string"
            },
            "strict_min_version": {
              "type": "string"
            }
          }
        }
      }
    },
    "permissions": {
      "type": "array",
      "items": {
        "anyOf": [{ "const": "activeTab" }]
      }
    },
    "optional_permissions": {
      "type": "array",
      "uniqueItems": true,
      "items": {
        "anyOf": [{ "const": "activeTab" }]
      }
    },
    "options_ui": {
      "type": "object",
      "properties": {
        "page": {
          "type": "string"
        },
        "open_in_tab": {
          "type": "boolean"
        }
      }
    },
    "icons": {
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "512": { "type": "string" },
        "128": { "type": "string" },
        "64": { "type": "string" },
        "48": { "type": "string" },
        "32": { "type": "string" }
      }
    },
    "background": {
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "scripts": { "type": "array", "items": { "type": "string" } },

        "type": { "const": "module" }
      }
    },
    "action": {
      "description": "An action is a button that your extension adds to the browser's toolbar. The button has an icon, and may optionally have a popup whose content is specified using HTML, CSS, and JavaScript.",
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "default_icon": {
          "anyOf": [
            { "type": "string" },
            {
              "type": "object",
              "additionalProperties": false,
              "properties": {
                "512": { "type": "string" },
                "128": { "type": "string" },
                "64": { "type": "string" },
                "48": { "type": "string" },
                "38": { "type": "string" },
                "32": { "type": "string" },
                "19": { "type": "string" },
                "16": { "type": "string" }
              }
            }
          ]
        },
        "default_title": {
          "type": "string"
        },
        "default_popup": {
          "type": "string"
        }
      }
    },
    "content_scripts": {
      "type": "array",
      "items": {
        "type": "object",
        "additionalProperties": false,
        "properties": {
          "all_frames": {
            "type": "boolean"
          },
          "matches": {
            "type": "array",
            "items": {
              "type": "string"
            }
          },
          "js": {
            "type": "array",
            "items": {
              "type": "string"
            }
          },
          "css": {
            "type": "array",
            "items": {
              "type": "string"
            }
          }
        }
      }
    },
    "web_accessible_resources": {
      "type": "array",
      "items": {
        "type": "object",
        "additionalProperties": false,
        "properties": {
          "resources": {
            "type": "array",
            "items": { "type": "string" }
          },
          "matches": {
            "type": "array",
            "items": { "type": "string" }
          }
        }
      }
    },
    "page_action": {
      "description": "A page action is an icon that your extension adds inside the browser's URL bar.",
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "default_icon": {
          "description": "Use this to specify an icon for the action.",
          "type": "object",
          "additionalProperties": { "type": "string" },
          "propertyNames": { "enum": ["19", "38"] }
        },
        "default_title": {
          "description": "Tooltip for the icon, displayed when the user moves their mouse over it.",
          "type": "string"
        },
        "default_popup": {
          "description": "The path to an HTML file containing the specification of the popup.",
          "type": "string"
        }
      },
      "examples": [
        {
          "default_icon": {
            "19": "button/geo-19.png",
            "38": "button/geo-38.png"
          },
          "default_title": "Whereami?",
          "default_popup": "popup/geo.html"
        }
      ]
    }
  }
}
