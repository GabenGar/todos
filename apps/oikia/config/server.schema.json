{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "additionalProperties": false,
  "required": ["server", "database"],
  "properties": {
    "server": {
      "type": "object",
      "required": ["port"],
      "additionalProperties": false,
      "properties": {
        "port": {
          "type": "integer",
          "minimum": 1
        }
      }
    },
    "database": {
      "$ref": "#/definitions/database"
    }
  },
  "definitions": {
    "database": {
      "description": "PostgreSQL connection object.",
      "type": "object",
      "additionalProperties": false,
      "required": ["user", "host", "port", "database"],
      "properties": {
        "user": {
          "type": "string",
          "pattern": "^[\\s\\S]*$"
        },
        "password": {
          "type": "string",
          "pattern": "^[\\s\\S]*$"
        },
        "host": {
          "type": "string",
          "pattern": "^[\\s\\S]*$"
        },
        "port": {
          "type": "integer"
        },
        "database": {
          "type": "string",
          "pattern": "^[\\s\\S]*$"
        }
      }
    }
  }
}
