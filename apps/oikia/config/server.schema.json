{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "additionalProperties": false,
  "required": ["server", "database"],
  "properties": {
    "server": {
      "type": "object",
      "required": ["port"],
      "additionalProperties": false,
      "properties": {
        "port": {
          "type": "integer",
          "minimum": 1
        }
      }
    },
    "database": {
      "$ref": "#/definitions/database"
    }
  },
  "definitions": {
    "database": {
      "anyOf": [
        { "description": "PostgreSQL connection string.", "type": "string" },
        {
          "description": "PostgreSQL connection object.",
          "type": "object",
          "additionalProperties": false,
          "required": ["user", "host", "port", "database"],
          "properties": {
            "user": {
              "type": "string"
            },
            "password": {
              "type": "string"
            },
            "host": {
              "type": "string"
            },
            "port": {
              "type": "integer"
            },
            "database": {
              "type": "string"
            }
          }
        }
      ]
    }
  }
}
