{
  "$schema": "https://turbo.build/schema.json",
  "extends": ["//"],
  "tasks": {
    "build": {
      "inputs": [
        "$TURBO_DEFAULT$",
        "src/**",
        "public/**",
        "schema/**",
        "scripts/**",
        "localization/**",
        "backend/**"
      ],
      "outputs": ["build/**"]
    },
    "start": {
      "persistent": true,
      "cache": false
    },
    "develop-database-purge": {
      "cache": false
    }
  }
}
