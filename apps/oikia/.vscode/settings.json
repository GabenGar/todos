{
  "typescript.preferences.autoImportFileExcludePatterns": ["**/src/routes"],
  "[typescript]": {
    "editor.defaultFormatter": "biomejs.biome"
  },
  "[typescriptreact]": {
    "editor.defaultFormatter": "biomejs.biome"
  },
  "[json]": {
    "editor.defaultFormatter": "biomejs.biome"
  },
  "[jsonc]": {
    "editor.defaultFormatter": "biomejs.biome"
  },
  "json.schemas": [
    {
      "fileMatch": [
        "config/server.json",
        "config/server.development.json",
        "schema/server.example.json"
      ],
      "url": "./schema/server.schema.json"
    }
  ]
}
