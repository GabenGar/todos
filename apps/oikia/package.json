{
  "name": "oikia",
  "version": "0.0.1",
  "private": true,
  "type": "module",
  "scripts": {
    "build": "react-router build",
    "start": "node server.js --environment=production",
    "dev": "node server.js --environment=development",
    "check": "react-router typegen && tsc --build",
    "lint": "biome lint --write ./src",
    "format": "biome format --write ./src",
    "develop-database-purge": "node scripts/develop/database/purge.mjs"
  },
  "imports": {
    "#localization/*": "./localization/*.json",
    "#environment": "./src/environment/index.ts",
    "#environment/*": "./src/environment/*/index.ts",
    "#lib/*": "./src/lib/*/index.ts",
    "#hooks": "./src/hooks/index.ts",
    "#components/*": "./src/components/*/index.ts",
    "#entities/*": "./src/entities/*/index.ts",
    "#database": "./src/.server/database/index.ts",
    "#database/*": "./src/.server/database/*/index.ts",
    "#server/*": "./src/.server/*/index.ts",
    "#client/*": "./src/.client/*/index.ts"
  },
  "dependencies": {
    "@date-fns/tz": "^1.2.0",
    "@exodus/schemasafe": "^1.3.0",
    "@react-router/node": "^7.7.0",
    "@react-router/serve": "^7.7.0",
    "@repo/ui": "*",
    "bcp-47": "^2.1.0",
    "bcryptjs": "^3.0.2",
    "clsx": "^2.1.1",
    "compression": "^1.8.1",
    "date-fns": "^4.1.0",
    "express": "^5.1.0",
    "isbot": "^5.1.28",
    "iso-639-1": "^3.1.5",
    "morgan": "^1.10.1",
    "nanoid": "^5.1.5",
    "node-pg-migrate": "^8.0.3",
    "pg": "^8.16.3",
    "pg-promise": "^11.15.0",
    "react": "19.1.0",
    "react-dom": "19.1.0",
    "react-router": "^7.7.0",
    "react-router-dom": "^7.7.0"
  },
  "devDependencies": {
    "@biomejs/biome": "2.1.2",
    "@react-router/dev": "^7.7.0",
    "@types/compression": "^1.8.1",
    "@types/express": "^5.0.3",
    "@types/express-serve-static-core": "^5.0.7",
    "@types/morgan": "^1.9.10",
    "@types/node": "^20.9.0",
    "@types/pg": "^8.15.4",
    "@types/react": "19.1.8",
    "@types/react-dom": "19.1.6",
    "typescript": "^5.8.3",
    "vite": "^7.0.5"
  }
}
