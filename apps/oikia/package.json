{
  "name": "oikia",
  "version": "0.0.1",
  "private": true,
  "type": "module",
  "scripts": {
    "build": "react-router build",
    "start": "node server.js --environment=production",
    "dev": "node server.js --environment=development",
    "check": "react-router typegen && tsc --build",
    "lint": "biome lint --write ./src",
    "format": "biome format --write ./src",
    "develop-database-purge": "node scripts/develop/database/purge.mjs"
  },
  "imports": {
    "#localization/*": "./localization/*.json",
    "#environment": "./src/environment/index.ts",
    "#environment/*": "./src/environment/*/index.ts",
    "#lib/*": "./src/lib/*/index.ts",
    "#components/*": "./src/components/*/index.ts",
    "#entities/*": "./src/entities/*/index.ts",
    "#database": "./src/.server/database/index.ts",
    "#database/*": "./src/.server/database/*/index.ts",
    "#server/*": "./src/.server/*/index.ts",
    "#client/*": "./src/.client/*/index.ts"
  },
  "dependencies": {
    "@date-fns/tz": "^1.2.0",
    "@exodus/schemasafe": "^1.3.0",
    "@react-router/node": "^7.2.0",
    "@react-router/serve": "^7.2.0",
    "@repo/ui": "*",
    "bcp-47": "^2.1.0",
    "bcryptjs": "^3.0.2",
    "clsx": "^2.1.1",
    "compression": "^1.8.0",
    "date-fns": "^4.1.0",
    "express": "^4.21.2",
    "isbot": "^5.1.17",
    "iso-639-1": "^3.1.5",
    "morgan": "^1.10.0",
    "nanoid": "^5.1.5",
    "node-pg-migrate": "^7.9.1",
    "pg": "^8.13.3",
    "pg-promise": "^11.10.2",
    "react": "18.3.1",
    "react-dom": "18.3.1",
    "react-router": "^7.2.0",
    "react-router-dom": "^7.2.0"
  },
  "devDependencies": {
    "@biomejs/biome": "1.9.4",
    "@react-router/dev": "^7.2.0",
    "@types/compression": "^1.7.5",
    "@types/express": "^5.0.0",
    "@types/express-serve-static-core": "^5.0.6",
    "@types/morgan": "^1.9.9",
    "@types/node": "^20",
    "@types/pg": "^8.11.11",
    "@types/react": "18.3.12",
    "@types/react-dom": "18.3.1",
    "react-router-devtools": "^1.1.0",
    "typescript": "^5.7.2",
    "vite": "^5.4.11"
  }
}
