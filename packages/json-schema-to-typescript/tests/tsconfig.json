{
  "compilerOptions": {
    "target": "es2020",
    "lib": [
      "ES2020"
    ],
    "module": "Node16",
    "moduleResolution": "Node16",
    "rootDir": ".",
    "outDir": ".",
    // https://github.com/microsoft/TypeScript/wiki/Performance#controlling-types-inclusion
    "types": [
      "node"
    ],
    "resolveJsonModule": true,
    "isolatedModules": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "incremental": true,
    "verbatimModuleSyntax": true,

  },
  "files": [
    "static/01-primitives/generator.ts",
    "static/02-strings/generator.ts",
    "static/03-numbers/generator.ts",
    "static/04-objects/generator.ts",
  ],
  "references": [
    {
      "path": "../tsconfig.json",
    },
  ],
}
