{
  "compilerOptions": {
    "baseUrl": "./src",
    "paths": {
      "#environment": [
        "./environment.ts"
      ],
      "#pages/types": [
        "./app/types.ts"
      ],
      "#lib/*": [
        "./lib/*/index.ts"
      ],
      "#server": [
        "./server/index.ts"
      ],
      "#server/*": [
        "./server/*/index.ts"
      ],
      "#hooks": [
        "./hooks/index.ts"
      ],
      "#components": [
        "./components/index.ts"
      ],
      "#components/*": [
        "./components/*/index.ts"
      ]
    },
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": false,
    "noEmit": true,
    "incremental": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "plugins": [
      {
        "name": "next"
      }
    ]
  },
  "include": [
    "next-env.d.ts",
    ".next/types/**/*.ts",
    "**/*.ts",
    "**/*.tsx"
  ],
  "exclude": [
    "node_modules"
  ]
}
