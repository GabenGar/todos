{
  "compilerOptions": {
    "incremental": true,
    "target": "es2020",
    "lib": [
      "ES2020"
    ],
    "module": "Node16",
    "moduleResolution": "Node16",
    "rootDir": "./",
    "baseUrl": "./",
    "paths": {
      "#lib/*": [
        "./src/lib/*/index.ts"
      ]
    },
    "resolveJsonModule": true,
    "outDir": "./dist",
    "isolatedModules": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true
  }
}
